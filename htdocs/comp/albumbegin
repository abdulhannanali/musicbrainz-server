<%args>
$artist
$album
$nomod
$albumdetail=>0
$link=>""
$linktype=>""
</%args>

<%perl>
my $check_box = "";
my $albumid = $album->GetId();
my $script = $albumdetail ? "albumdetail" : "showalbum";
my ($image, $alt, $title);

# Check to see if we're in tagging mode, if so, pass off control
if (exists $session{tagged_albums})
{
    return mc_comp("/comp/tagalbumbegin", %ARGS);
}

if ($link ne '')
{
    if ($linktype eq 'expand')
    {
        $image = "/images/plus.gif";
        $title = "Show expanded album";
        $alt = "Expand";
    }
    if ($linktype eq 'collapse')
    {
        $image = "/images/minus.gif"; 
        $title = "Show collapsed album";
        $alt = "Collapse";
    }
}

</%perl>
<a name="al<% $album->GetId() %>">
<table border="0" cellpadding="0" cellspacing="0"
       bgcolor="#000000" width="100%">
<tr><td bgcolor="#000000">
  <table width="100%" border="0" cellspacing="1" cellpadding="2">
  <tr>
% if ($album->GetModPending()) {
        <td width=85% bgcolor="#FFFFCC" valign="center">
%          if ($image ne '') {
               <a href="<% $link %>"><img title="<% $title %>"
                  alt="<% $alt %>"
                  src="<% $image %>" align="center" border="0"></a>
%          }
           <a href="/<% $script %>.html?albumid=<% $album->GetId() %>"><% $album->GetName() %></a>
% } else {
        <td width=85% bgcolor="#FFBA58" valign="center">
%          if ($image ne '') {
               <a href="<% $link %>"><img alt="<% $alt %>" title="<% $title %>"
                  src="<% $image %>" align="center" border="0"></a>
%          }
           <a href="/<% $script %>.html?albumid=<% $album->GetId() %>"><% $album->GetName() %></a>
% }
        </td>
%#        <td width="10" bgcolor="#FFBA58" valign="center" align="center">
%#           <% $check_box |n %>
%#        </td>
% if (exists $session{user} && !$nomod) {
        <td width=15% bgcolor="#FFBA58" align=center>
          <a href="/editalbum.html?id=<% $albumid %>&artist=<% $artist->GetId() %>">Edit</a>
           | <a href="/remalbum.html?album=<% $albumid %>&artist=<% $artist->GetId() %>">Del</a>
        </td>
% }
  </tr>
  </table>
  <TABLE WIDTH="100%" bgcolor=white BORDER="0" CELLSPACING="1" CELLPADDING="3">


<%args>
$id
$tracknum
$name
$artistname
$modpending
$hilitetrack
$hilitecolor
</%args>

<%perl>

my $bgcolor;
$bgcolor = ($modpending) ? 'bgcolor="#FFFFCC"' : '';
$bgcolor = ($hilitetrack == $id) ? 'bgcolor="#FFCCFF"' : $bgcolor;

</%perl>

<tr>
    <td width="10%" align=center>
       <% $tracknum %>
    </td>
% if ($artistname ne '') {
    <td width="50%" <% $bgcolor |n %>>
% } else {
    <td width="80%" <% $bgcolor |n %>>
% }
       <% $name  %>
    </td>
% if ($artistname ne '') {
    <td width="30%">
       <% $artistname  %>
    </td>
% }
% if (exists $session{user}) {
    <td width="10%" align=center>
       <a href="/edittrack.html?id=<% $id %>">Edit</a>
    </td>
% }
</tr>

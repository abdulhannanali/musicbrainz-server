<%args>
$id
$tracknum
$name
$artistname
$modpending
</%args>

<%perl>

my $bgcolor;
$bgcolor = $modpending ? 'bgcolor="#FFFFCC"' : '';

</%perl>

<tr>
    <td width="10%" align=center>
       <small><font face="Lucida,Verdana,Helvetica,Arial">
       <% $tracknum %>
       </font></small>
    </td>
% if ($artistname ne '') {
    <td width="50%" <% $bgcolor |n %>>
% } else {
    <td width="80%" <% $bgcolor |n %>>
% }
       <small><font face="Lucida,Verdana,Helvetica,Arial">
       <% $name  %>
       </font></small>
    </td>
% if ($artistname ne '') {
    <td width="30%">
       <small><font face="Lucida,Verdana,Helvetica,Arial">
       <% $artistname  %>
       </font></small>
    </td>
% }
% if (exists $session{user}) {
    <td width="10%" align=center>
       <small><font face="Lucida,Verdana,Helvetica,Arial">
       <a href="/edittrack.html?id=<% $id %>">Edit</a>
       </font></small>
    </td>
% }
</tr>

<%args>
$id
$tracknum
$name
$artistname
$artistid
$album
$modpending
$tr_modpending
$hilitetrack
$hilitecolor
$lyricspresent
$tindex
$albumartist
</%args>

<%perl>

my ($bgcolor, $tr_bgcolor);
$bgcolor = ($modpending) ? 'bgcolor="#FFFFCC"' : '';
$bgcolor = ($hilitetrack == $id) ? 'bgcolor="#FFCCFF"' : $bgcolor;
$tr_bgcolor = ($tr_modpending) ? 'bgcolor="#FFFFCC"' : '';

</%perl>

<tr>
    <td width="10%" align=center <% $tr_bgcolor |n %>>
       <% $tracknum %>
    </td>
% if ($albumartist == 0) {
    <td width="50%" <% $bgcolor |n %>>
% } else {
    <td width="80%" <% $bgcolor |n %>>
% }
% if ($lyricspresent == 1) {
       <a href="/showlyrics.html?id=<% $id %>"><% $name %></a>
% } else {
       <% $name %>
% }
    </td>
% if ($albumartist == 0) {
    <td width="30%">
       <% $artistname  %>
% if (exists $session{user}) {
          (<a href="/changetrack.html?album=<% $album %>&artist=<% $artistid %>&tindex=<% $tindex %>&solo=1">Change</a>)
% }
    </td>
% }
% if (exists $session{user}) {
    <td width="10%" align=center>
       <a href="/edittrack.html?id=<% $id %>&album=<% $album %>&artist=<% $artistid %>">Edit</a>
    </td>
% }
</tr>

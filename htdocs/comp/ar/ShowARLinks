	#  implied, including  but not limited  to the warranties of  merchantability,
	#  fitness for a particular purpose and noninfringement. In no event shall the
	#  authors or  copyright  holders be  liable for any claim,  damages or  other
	#  liability, whether  in an  action of  contract, tort  or otherwise, arising
	#  from,  out of  or in  connection with  the software or  the  use  or  other
	#  dealings in the software.
	#
	#  GPL - The GNU General Public License    http://www.gnu.org/licenses/gpl.txt
	#  Permits anyone the right to use and modify the software without limitations
	#  as long as proper  credits are given  and the original  and modified source
	#  code are included. Requires  that the final product, software derivate from
	#  the original  source or any  software  utilizing a GPL  component, such  as
	#  this, is also licensed under the GPL license.
	# -----------------------------------------------------------------------------
	#
	# Summary:
	# -----------------------------------------------------------------------------
	# Renders the available relationship editing links for the current
	# entity being displayed.
	#
	# $Id$
	#
</%perl>
<%args>

	$id
	$type
	$name => ""
	$short => 0
	$isrelpage => 0
	$expanded => 0
	$count => 0

</%args>
<%perl>

	return undef if (!$session{uid} && $isrelpage);

	my $typeshow = ($type eq "album" ? "release" : $type);
	my $typename = ($type eq "url" ? "URL" : $typeshow);

	my $link = $short ? "Add relationship" : "Use this $typename in a relationship";


	my $recent_links = ($session{recent_links} ||= []);
	my $ename = uri_escape($name);

	$m->out("[ ");
	if ($session{uid})
	{
		if ($isrelpage)
		{
			$m->out(sprintf qq! <a href="/show/%s/relationships.html?%sid=$id&amp;addrel=1">$link</a>!,
					$typeshow,
					$typeshow);
			if (scalar(@$recent_links) == 0 && $name ne "")
			{
				$m->out(qq! | <a href="/edit/relationship/addurl.html?id=$id&amp;type=$type&amp;name=$ename">Relate to URL</a>!);
			}
			if ($count)
			{
				$m->out(sprintf qq! | <a href="/show/%s/relationships.html?%sid=$id%s">%s</a>!,
						$typeshow,
						$typeshow,
						$expanded ? "" : "&amp;expanded=1",
						$expanded ? "Compact listing" : "Expanded listing");
			}
		}
		else
		{
			$m->out(sprintf qq!<a href="/show/%s/?%sid=%s&amp;addrel=1">%s</a> !, $typeshow, $typeshow, $id, $link);

			if (scalar(@$recent_links) == 0 && $name ne "")
			{
				$m->out(qq! | <a href="/edit/relationship/addurl.html?id=$id&amp;type=$type&amp;name=$ename">Relate to URL</a>!);
			}
			if ($count)
			{
				$m->out(sprintf qq! | <a href="/show/%s/relationships.html?%sid=$id">View all relationships</a>!,
						$typeshow,
						$typeshow);

				$m->out(sprintf qq! | <a href="/show/%s/relationships.html?%sid=$id&amp;expanded=1">Edit relationships</a>!,
						 $typeshow,
						 $typeshow);
			}
		}

		# show add CC link for releases/tracks
		$m->out(qq! | <a href="/edit/relationship/addcc.html?id=$id&amp;type=$type&amp;name=$ename">Add CC License</a> !)
			if ($type eq "album" or $type eq "track");
	}
	else
	{
		if (!$isrelpage)
		{
			$m->out(sprintf qq! <a href="/show/%s/relationships.html?%sid=$id">View all relationships</a>!,
					$typeshow,
					$typeshow);

			$m->out(sprintf qq! | <a href="/show/%s/relationships.html?%sid=$id">Edit</a>!,
					$typeshow,
					$typeshow);
		}
	}

	$m->out(" ]");

</%perl>


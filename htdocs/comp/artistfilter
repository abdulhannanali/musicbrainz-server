 	#  fitness for a particular purpose and noninfringement. In no event shall the
 	#  authors or  copyright  holders be  liable for any claim,  damages or  other
 	#  liability, whether  in an  action of  contract, tort  or otherwise, arising
 	#  from,  out of  or in  connection with  the software or  the  use  or  other
 	#  dealings in the software.
 	#
 	#  GPL - The GNU General Public License    http://www.gnu.org/licenses/gpl.txt
 	#  Permits anyone the right to use and modify the software without limitations
 	#  as long as proper  credits are given  and the original  and modified source
 	#  code are included. Requires  that the final product, software derivate from
 	#  the original  source or any  software  utilizing a GPL  component, such  as
 	#  this, is also licensed under the GPL license.
 	# -----------------------------------------------------------------------------
 	#
 	# Summary:
 	# -----------------------------------------------------------------------------
 	# This component allows to search for, and pick an artist in a workflow.
 	#
 	# $URL$
 	# $Id$
 	#
</%perl>
<%args>
	$search => ""
	$defaultquery => ""
	$submit => ""

	@dontshow => ()
	%arglist => ()
#	$allowcreate => 0 adding artists in workflows is deprecated, redirect to add artist form instead.
	$url

</%args>
<%perl>

	# Instantiate MusicBrainz object
	my $mb = $m->comp("/comp/dblogin");

	# use query, or the defaultquery and perform the search.
	$search = $defaultquery if ($search eq "");
	my $engine = SearchEngine->new($mb->{DBH}, "artist");
	$engine->Search(query => $search, limit => 0);

	my $searchlabel = "Search for artist:";
	my $searchbtn = "Search &raquo;";
	if ($submit ne "")
	{
		$searchbtn = "Search again &raquo;";
	}
</%perl>


% 	if ($submit ne "" and $search eq "") {
		<tr>
			<td>&nbsp;</td>
			<td class="error">
				<ul>
					<li>You did not enter a search keyword.</li>
				</ul>
			</td>
		</tr>
%	}

		<tr class="top">
			<td class="label">
				<label for="id_artistfiltersearch"><% $searchlabel %></label></td>
			<td class="field">
				<form method="post" action="<% $url %>" id="ArtistFilterSearch">
					<div>
						<input type="text" name="search" id="id_artistfiltersearch" value="<% $search %>" size="40"
							title="Enter a search keyword here" />

					</div>
					<div style="margin-top: 2px">
						<input class="button" name="submit" type="submit" value="Cancel" />
						<input class="button" name="submit" type="submit" value="<% $searchbtn |n %>"
							title="Seach for an artist" />
						<& /comp/args-to-hidden-fields.inc, %arglist &>
					</div>
				</form>
			</td>
		</tr>

<%perl>

	my $searchperformed = $engine->Result != &SearchEngine::SEARCHRESULT_NOQUERY;
	if ($searchperformed)
	{
		# Retrieve all the results and weed out the "don't show" artists
		my @artistsremoved;
		my @r = do {
			my %dontshow = map { $_=>1 } @dontshow;
			my @r;
			while (my $row = $engine->NextRow)
			{
				if ($dontshow{ $row->{"artistid"} })
				{
					push @artistsremoved, $row->{"artistname"};
					next;
				}
				push @r, $row;
			}
			@r;
		};

		# if we have search results to display.
		if (@r)
		{
</%perl>
		<tr class="spaced">
			<td>&nbsp;</td>
			<td class="formsection">
				The following artists matched your query <strong><% $search %></strong>.
				Please select the artist you require or try another query. (Hint: You can
				double-click with your mouse on the radio button to submit the form.)</td>
		</tr>
		<tr class="top">
			<td class="label">
				<label>Found artists:</label></td>
			<td class="field">
				<form method="post" action="<% $url %>" id="ArtistFilterSelect">
					<table border="0" cellspacing="0" cellpadding="0" class="artistfilter-listing">
<%perl>
					my $checked = ' checked="checked" ';
					my $i = 0;
					for my $row (@r)
					{
</%perl>
					<tr class="row<% $i % 2 %>">
						<td class="radio">
							<input type="radio" name="selectedartist" id="selectedartist"
								value="<% $row->{artistid} %>" <% $checked %>
								  ondblclick="this.form.submit()"
								  title="Select this artist"
							/></td>
						<td class="no"><% $i += 1  %>:</td>
						<td class="link">
							<& /comp/linkartist,
								id => $row->{artistid},
								name => $row->{artistname},
								sortname => $row->{artistsortname},
								resolution => $row->{artistresolution},
								strong => 0 &></td>
					</tr>
<%perl>
						$checked = "";
					}
					$m->comp("/comp/movefocus", id => "selectedartist");
</%perl>
					</table>
					<& /comp/args-to-hidden-fields.inc, %arglist &>
					<input class="button" type="submit" value="Select &raquo;"
						title="Choose the selected artist"/>
				</form>
			</td>
		</tr>
<%perl>
		}
		else
		{
</%perl>
		<tr class="spaced top">
			<td class="label">
				No artists found:</td>
			<td class="formsection">
				No artists found matching your query <strong><% $search %></strong>.
<%perl>
			if (scalar @artistsremoved == 1)
			{
				$m->out(sprintf qq!(Artist %s was not shown.)!, $artistsremoved[0]);
			}
			elsif (scalar @artistsremoved)
			{
				$m->out(sprintf qq!(Artists %s were not shown.)!, join(", ", @artistsremoved));
			}
</%perl>
			</td>
		</tr>
<%perl>

 		}
 	}

	# move the keyboard focus to the search field, or the
	# first artist result item.
	$m->comp("/comp/movefocus", id => "id_artistfiltersearch") if (not $searchperformed);

	if ($searchperformed)
	{

</%perl>

		<tr class="spaced top">
			<td class="label">
				Add new artist?</td>
			<td>
				If you did not find the artist you were looking for,
				you can search again with another keyword, or if you
				are sure the artist was not yet added to the database,
				click on the <strong>Add New Artist &raquo;</strong> button.
			</td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td style="padding-bottom: 20px">
				<form method="post" action="/edit/artist/add.html" id="ArtistFilterAddArtist">
					<div>
						<input class="button" type="submit" value="Add New Artist &raquo;"
							title="Add a new artist to MusicBrainz" />
						<input type="hidden" name="name" value="<% $search %>" />

%		my $returnurl = sprintf "$url?%s&selectedartist=", $m->comp("/comp/args-to-querystring.inc", %arglist);
						<input type="hidden" name="returnurl" value="<% $returnurl %>" />
					</div>
				</form>
			</td>
		</tr>

%	}



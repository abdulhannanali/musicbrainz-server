%# vi: set ts=4 sw=4 ft=mason :
<%perl>
	my ($fHeader, $fFooter) = @_;

	$m->comp("/comp/sidebar-notitle", pagetitle => "Bad Arguments")
		if $fHeader;

	$m->comp("/comp/tablebegin", title => "The arguments supplied to this page are invalid");
	$m->out(qq!Please check the arguments and then try loading this page again.!);
	$m->comp("/comp/tableend");

	$m->comp("/comp/footer")
		if $fFooter;

</%perl>
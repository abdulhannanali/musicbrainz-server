<%args>
$ind=>""
$page=>"/browseartists.html"
$showspecial=>1
</%args>
<%perl>

my ($i, $p, $t);

mc_out('<table width="100%"><tr>');
if (length($ind) > 0)
{
    $t = $ind;
    $t =~ s/_/?/g;
    $t =~ s/ /(space)/g;
    </%perl>
    <td width="30%" align="center">
    <table cellpadding="0" cellspacing="0" border="0" bgcolor="#000000">
     <tr><td bgcolor="#000000">
      <table width="100%" cellpadding="2" cellspacing="1" border="0">
      <tr>
        <td bgcolor="#FFBA58" align="left" valign="middle" 
            width="100%" class="mbtable">
        <img src="/images/pixel.gif" width="3" height="1" alt="" 
             border="0" align="absmiddle">
        <font size="+2" color="black"><% $t %></font> 
        <img src="/images/pixel.gif" width="3" height="1" alt="" 
             border="0" align="absmiddle">
        </td>
       </tr>
       </table>
       </td></tr>
    </table>
    </td>
    <%perl>

    $t = $ind;
    chop($t);
}

if (length($ind) > 0)
{
    </%perl>
    <td width="10%" align="center">
      <a href="<% $page %>?index=<% $t %>">Back</a><br>
      <a href="<% $page %>">Start&nbsp;over</a>
    </td>
    <td width="3" align="center">
      <img src="/images/black_pixel.gif" height="20" width="1" border="0">
    </td>
    <%perl>
}

for($i = 0; $i < 26; $i++)
{
    $p .= '<a href="' . $page . '?index='. $ind . chr($i + 65) . '">' .
           chr($i + 65) . "</a> ";
    if (($i + 1) % 13 == 0)
    {
        $p .= "<br>\n";
    }
}
</%perl>

<td width="50%" align="center">
    <table>
    <tr>
%   if ($showspecial) {
        <td align="center">
           <a href="<% $page %>?index=<% $ind %>_">wildcard</a><br>

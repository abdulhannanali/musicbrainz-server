<%args>
$ind=>""
$page=>"/browseartists.html"
</%args>
<%perl>

my ($i, $p, $t);

mc_comp("/comp/framedboxbegin", width=>"100%");
mc_out('<table width="100%"><tr>');
# TODO: Add support for spaces
if (length($ind) > 0)
{
    $t = $ind;
    $t =~ s/_/?/g;
    </%perl>
    <td width="30%" align="center">
    <table cellpadding="0" cellspacing="0" border="0" bgcolor="#000000">
     <tr><td bgcolor="#000000">
      <table width="100%" cellpadding="2" cellspacing="1" border="0">
      <tr>
        <td bgcolor="#FFBA58" align="left" valign="middle" 
            width="100%" class="mbtable">
        <img src="/images/pixel.gif" width="3" height="1" alt="" 
             border="0" align="absmiddle">
        <font size="+2" color="black"><% $t %></font> 
        <img src="/images/pixel.gif" width="3" height="1" alt="" 
             border="0" align="absmiddle">
        </td>
       </tr>
       </table>
       </td></tr>
    </table>
    </td>
    <%perl>

    $t = $ind;
    chop($t);
}

mc_out('<td width="10%" align="center">');
if (length($ind) > 0)
{
    mc_out("<a href=\"$page?index=$t\">Back</a><br>");
    mc_out("<a href=\"$page\">Top</a>");
}
else
{
    mc_out("&nbsp;");
}
mc_out("</td>");

mc_out('<td width="50%" align="center"><a href="' . $page . '?index='.$ind.'_">?</a> ');
for($i = 0; $i < 26; $i++)
{
    $p .= '<a href="' . $page . '?index='. $ind . chr($i + 65) . '">' .
           chr($i + 65) . "</a> ";
    if (($i + 1) % 13 == 0)
    {
        $p .= "<br>\n";
    }
}
mc_out($p);
mc_out("</td></tr></table>");
mc_comp("/comp/framedboxend");
mc_out("<br>");

</%perl>

%# vi: set ts=4 sw=4 ft=mason :
<%perl>

	return 1 if $session{uid};
	my ($fHeader, $fFooter, $title) = @_;

	$title = "You need to login to view this page" if (not $title);

	$m->comp("/comp/sidebar", pagetitle => "Login", title => $title)
		if $fHeader;
</%perl>

	<& /comp/tablebegin, title => "Login" &>
		<& /comp/loginbox &>
	<& /comp/tableend &>

<%perl>
	$m->comp("/comp/footer")
		if $fFooter;
	return 0;
</%perl>

<%perl>

my $mb = $m->comp("/comp/dblogin");
my $stats = MusicBrainz::Server::Statistics->new($mb->{DBH});
my $edit_stats = $stats->GetEditStats();

my $artists = $stats->GetLastUpdates("artist", 10);
my $releases = $stats->GetLastUpdates("release", 10);
my $labels = $stats->GetLastUpdates("label", 10);

</%perl>

	<table style="background-color: #fafafa; border: 1px #000000 solid;">
	<tr>
		<td valign="top" style="border-right: 1px grey solid;">
		<& /comp/dashboard/entities_list, data => $artists, type => 'artist' &>
		</td>
		<td valign="top" style="border-right: 1px grey solid;">
		<& /comp/dashboard/entities_list, data => $releases, type => 'release' &>
		</td>
		<td valign="top">
		<& /comp/dashboard/entities_list, data => $labels, type => 'label' &>
		</td>
	</tr>
	</table>


<%perl>

my $mb = $m->comp("/comp/dblogin");
my $stats = MusicBrainz::Server::Statistics->new($mb->{DBH});
my $recent = $stats->GetRecentReleases();

</%perl>

%#  recent releases
	<p>Recent releases</p>
	<table style="background-color: #fafafa; border: 1px #000000 solid; padding: 10px;">
		<tr>
			<th>Release</th>
			<th>Artist</th>
			<th>Date</th>
		</tr>

%	foreach my $row (@$recent) {
		<tr>
			<td><a href="/release/<% $row->[0] %>.html"><% $row->[1] %></a></td>
			<td><a href="/artist/<% $row->[2] %>.html"><% $row->[3] %></a></td>
			<td><% $row->[4] %></td>
		</tr>
%   }
		<tr>
			<td colspan="3">
			[ <a href="zeitgeist.html?type=recent">see more recent releases</a> ]
			</td>
		</tr>
	</table>

%# vi: set ts=4 sw=4 ft=mason :

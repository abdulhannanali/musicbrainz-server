<%args>

	$name
	$checked => 0
	$enabled => 1
	$tabindex => undef
	$id => undef

</%args>
<%perl>

	# prepare tooltip depending on enabled flag.
	my $title = "Tick this box to make the Artist editable.";

	# call the checkbox component
	$m->comp("/comp/form/checkbox",
		name => $name,
		id => $id,
		checked => $checked,
		enabled => $enabled,
		tabindex => $tabindex,
		title => $title,
	);

</%perl>
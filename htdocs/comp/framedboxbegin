% $width = "width=\"$width\"" if ($width ne '');
% $style = "style=\"$style\"" if ($style ne '');

<table <% $width." ".$style |n %> border="0" cellpadding="1" cellspacing="0">
<tr><td>
<table width="100%" border="0" style="background: #f0efff;" cellpadding="<% $cp %>" cellspacing="<% $cs %>">
<tr><td>

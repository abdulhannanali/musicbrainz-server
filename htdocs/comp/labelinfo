<%args>

	$label
	$short => 0

</%args>
% $label->LoadLastUpdate();
% my $lastupdate = MusicBrainz::Server::DateTime::format_datetime_since($label->GetLastUpdate());

	<& /comp/tablebegin, title => "Label information" &>

		<table class="formstyle">
			<tr>
				<td class="label">
					<& /comp/linkdoc, "LabelName", "Name" &>:</td>
				<td>
					<& /comp/linklabel, label => $label &></td>
			</tr>
			<tr>
				<td class="label">
					<& /comp/linkdoc, "MusicBrainzIdentifier", "MBID" &>:</td>
				<td>
					<% $label->GetMBId %></td>
			</tr>
			<tr>
				<td class="label">
					Last updated:</td>
				<td>
					<% $lastupdate %></td>
			</tr>

%	if (not $short)
%	{

			<tr>
				<td class="label">
					Permanent link:</td>
				<td>
					<& /comp/copyable-link, "label", $label, "linkedurl", &></td>
			</tr>
			<tr>
				<td class="label">
					Fancy link:</td>
				<td>
					<a href="/show/permlink.html?id=<% $label->GetMBId %>&amp;type=label"
						>Click here for a fancy link to this label</a></td>
			</tr>
			<tr>
				<td class="label">
					<a href="/development/mmd">XML</a>:</td>
				<td>
					<a href="<% $label->XML_URL %>"><% substr($label->XML_URL, 0, 48) . " &#8230;" |n %></a></td>
			</tr>

% 		if ($session{uid})
%		{

			<tr>
				<td class="label">
					<& /comp/linkdoc, "LabelID" &>:</td>
				<td>
					<% $label->GetId %></td>
			</tr>

% 		}

			<tr>
				<td class="label">
					Subscribers:</td>
				<td>
					<% scalar $label->GetSubscribers %>
					&nbsp;
					[ <a href="/show/label/subscriptions.html?label=<% $label->GetId %>">List</a>

%		if (exists $session{user}
%			and $label->GetId != &ModDefs::DLABEL_ID)
%		{

						| <a href="/user/subscribe.html?labelid=<% $label->GetId %>">Subscribe to this label</a>
						| <a href="/user/subscribe.html?labelid=<% $label->GetId %>&amp;unsubscribe=1">Unsubscribe from this label</a>

% 		}

					]
				</td>
			</tr>

%	}

		</table>

	<& /comp/tableend &>


<%perl>
my ($lang, $script) = @_;
my $title = '';
$title = $lang->GetName() if defined $lang;
$title .= ' / ' if defined $lang and defined $script;
$title .= $script->GetName() if defined $script;
</%perl>
% if ( $title ne '' and defined $lang ) {
	<abbr title="<% $title %>"><% $lang->GetISOCode3T() %></abbr>
% } else {
	-
% }

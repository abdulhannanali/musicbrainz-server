	# return the cached copy of this page if it
	# was rendered in the last 24 hours.
	return if $m->cache_self(
		busy_lock => "1min",
		expires_in => "24 hours",
	);

</%init>

	<div class="sidemenu">
		<table class="sidemenustats">

<%perl>

	# Instantiate MusicBrainz object, and render
	# the statistics. The results are cached for
	# 24 hours.
	my $mb = $m->comp("/comp/dblogin", quiet => 1);
	my $stat = Statistic->new($mb->{DBH});
	my %stats = %{ $stat->FetchAllAsHashRef };

	for ([ "Artists", $stats{'count.artist'} ],
		 [ "Releases", $stats{'count.album'} ],
		 [ "Tracks", $stats{'count.track'} ],
		 [ "Labels", $stats{'count.label'} ],
		 [ "Links", $stats{'count.ar.links'} ],
		 [ "Disc IDs", $stats{'count.discid'} ],
		 [ "PUIDs", $stats{'count.puid'} ],
		 [ "Edits", $stats{'count.moderation'} ],
		 [ "Editors", $stats{'count.moderator'} ])
	{
		my ($title, $count) = @$_;

</%perl>
				<tr>
					<td class="name"><% $title %></td>
					<td class="count"><% $count %></td>
				</tr>
%	}

		</table>

		<div class="morelink">
			<a href="/stats.html">more &raquo;</a>
		</div>
	</div>


	# -----------------------------------------------------------------------------
	#
	# Summary:
	# -----------------------------------------------------------------------------
	# This component is used to create links to wikidocs, and other pages
	# transcluded from the official musicbrainz wiki. A help image is displayed to
	# emphasize the purpose of the link.
	#
	# $Id$
	#
</%perl>
<%perl>

	my ($pagename, $linktext, $icon) = @_;

	$icon = 1 if (not defined $icon);
	$linktext = $pagename if (not defined $linktext);

	$m->out(qq!<strong>!);
	$m->out(qq!<a href="/doc/$pagename" title="Wiki page: $pagename" >!);
	$m->out(qq!<img src="/images/icon/wikidocs.gif" class="entityicon" alt="" width="13" height="13" />!) if ($icon);
	$m->out(qq!$linktext</a>!);
	$m->out(qq!</strong>!);

</%perl>
%# -- no empty line here, else an additional space will be
%#    inserted before the dot at the end of sentences.
%# vi: set ts=4 sw=4 ft=mason :
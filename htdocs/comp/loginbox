<%perl>
if ($url eq "") 
{
   $url = $r->uri();
   if (defined $r->args() && $r->args() ne '')
   {
      $url .= "?" . $r->args();
   }
}

if ($url ne "") {
   $url =~ s/\?/\@Q\@/g; 
   $url =~ s/\&/\@A\@/g; 
   mc_out("<INPUT TYPE=\"hidden\" NAME=\"url\" VALUE=\"$url\">");
}
</%perl>

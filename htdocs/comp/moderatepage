<%perl>

my ($mb, @info, $row, $offset, $i, $num_mods, $comp, $mod);
my $max_items = 15;

$mb = new MusicBrainz;  

mc_comp("/comp/title", title=>'Review Pending Moderations'); 

$offset = $ARGS{offset};
$offset = 0 if not defined $offset;
$offset = 0 if $offset < 0;  

$mb->Login();
$mod = Moderation->new($mb);
($num_mods, @info) = $mod->GetModerationList($offset, $max_items, $session{uid});
$mb->Logout();

</%perl>

<form method="POST" action="/bare/vote.html"
      enctype="application/x-www-form-urlencoded" class="formstyle"> 

% if (scalar(@info) > 0) {
<table width=100%>
<tr>
  <td align=right>
     Click here to vote on the items on this page:
     <INPUT TYPE="submit" NAME="Submit" VALUE="Submit">
  </td>
</tr>
</table>
% } else {
   <center>
   There are no modifcations pending.
   </center>
%}

% if ($num_mods > $max_items) {
<table width="100%">
<tr><td bgcolor=white>
<& /comp/prevnextbuttons, 
   url=>"moderate.html",
   offset=>$offset,
   itemsperpage=>$max_items,
   totalitems=>$num_mods
&>
</td></tr></table>
% }

<TABLE BORDER="0" CELLPADDING="0" CELLSPACING="0"
       BGCOLOR="#000000" WIDTH="100%">
<TR><TD>
<TABLE WIDTH="100%" BORDER="0" CELLSPACING="1" CELLPADDING="3">

<%perl>
for($i = 0; ; $i++) 
{
   $row = $info[$i];
   last if (!defined $row);

   mc_comp("/comp/showmod",
           id=>($$row[0]),
           table=>($$row[1]),
           column=>($$row[2]),
           rowid=>($$row[3]),
           artist=>($$row[4]),
           type=>($$row[5]),
           prev=>($$row[6]),
           new=>($$row[7]),
           time=>($$row[8]),
           moderator=>($$row[9]),
           yesvotes=>($$row[10]),
           novotes=>($$row[11]),
           artistname=>($$row[12]),
           voted=>($$row[13]));
}
</%perl>

</table>
</td></tr>
</table>

% if ($num_mods > $max_items) {
<table width="100%">
<tr><td bgcolor=white>
<& /comp/prevnextbuttons, 
   url=>"moderate.html",
   offset=>$offset,
   itemsperpage=>$max_items,
   totalitems=>$num_mods
&>
</td></tr></table>
% }


</form>

<%args>
$type
</%args>

<%perl>

my ($mb, @info, $row, $offset, $i, $comp, $mod);
my ($option1, $option2, $num_mods);
my $max_items = 10;

$mb = new MusicBrainz;  

$offset = $ARGS{offset};
$offset = 0 if not defined $offset;
$offset = 0 if $offset < 0;  

$mb->Login();
$mod = Moderation->new($mb);

if ($type == Moderation::TYPE_NEW)
{
    ($num_mods, @info) = $mod->GetModerationList($offset, $max_items, 
                                                 $session{uid}, $type);
    mc_comp("/comp/title", title=>'Review Pending Moderations'); 
    $option1 = '<a href="moderate.html?type=2">Old Moderations</a>';
    $option2 = '<a href="moderate.html?type=3">My Moderations</a>';
}
elsif ($type == Moderation::TYPE_VOTED)
{
    ($num_mods, @info) = $mod->GetModerationList($offset, ($max_items * 2)+1, 
                                                 $session{uid}, $type);
    mc_comp("/comp/title", title=>'Review Old (Voted) Moderations'); 
    $option1 = '<a href="moderate.html?type=1">New Moderations</a>';
    $option2 = '<a href="moderate.html?type=3">My Moderations</a>';
}
else
{
    ($num_mods, @info) = $mod->GetModerationList($offset, ($max_items * 2)+1, 
                                                 $session{uid}, $type);
    mc_comp("/comp/title", title=>'Review My Moderations'); 
    $option1 = '<a href="moderate.html?type=1">New Moderations</a>';
    $option2 = '<a href="moderate.html?type=2">Old Moderations</a>';
}
$mb->Logout();
</%perl>

<form method="POST" action="/bare/vote.html"
      enctype="application/x-www-form-urlencoded" class="formstyle"> 

<table width=100%>
<tr>
  <td width="33%" align="center" valign="top">
%    mc_out($option1);
  </td>
  <td width="33%" align="center" valign="top">
%    mc_out($option2);
  </td>
  <td width="33%" align="center" valign="top">
     <a href="mod_intro.html">Moderation questions?</a>
  </td>
</tr>
</table>

% if ($num_mods == 0) {
   <center>
   <br><br>
%  if ($type == Moderation::TYPE_NEW) {
   There are no new modifcations pending.
%  } elsif ($type == Moderation::TYPE_VOTED) {
   There are old (voted on) modifcations.
%  } else {
   You do not have any modifications.
%  }
   </center>
%}

% if ($num_mods > $max_items || $offset > 0) {
<table width="100%">
<tr><td bgcolor=white class="body">
<& /comp/prevnextbuttons, 
   url=>"moderate.html?type=$type",
   offset=>$offset,
   itemsperpage=>$max_items,
   totalitems=>$num_mods
&>
</td></tr></table>
% }

<TABLE BORDER="0" CELLPADDING="0" CELLSPACING="0"
       BGCOLOR="#000000" WIDTH="100%">
<TR><TD>
<TABLE WIDTH="100%" BORDER="0" CELLSPACING="1" CELLPADDING="3">

<%perl>
for($i = 0; $i < $max_items; $i++) 
{
   $row = $info[$i];
   last if (!defined $row);

   mc_comp("/comp/showmod",
           mb=>$mb,
           id=>($$row[0]),
           table=>($$row[1]),
           column=>($$row[2]),
           rowid=>($$row[3]),
           artist=>($$row[4]),
           type=>($$row[5]),
           prev=>($$row[6]),
           new=>($$row[7]),
           time=>($$row[8]),
           moderator=>($$row[9]),
           yesvotes=>($$row[10]),
           novotes=>($$row[11]),
           artistname=>($$row[12]),
           status=>($$row[13]),
           voted=>($$row[14]),
           mode=>$type);
}
</%perl>

</table>
</td></tr>
</table>

% if ($num_mods > $max_items || $offset > 0) {
<table width="100%">
<tr><td bgcolor=white class="body">
<& /comp/prevnextbuttons, 
   url=>"moderate.html?type=$type",
   offset=>$offset,
   itemsperpage=>$max_items,
   totalitems=>$num_mods
&>
</td></tr></table>
% }

% if ($num_mods > 0 && $type == Moderation::TYPE_NEW) {
<table width=100%>
<tr>
  <td width=20%>
     &nbsp;
  </td>
  <td align=right>
     Click here to vote on the items on this page:
     <INPUT TYPE="submit" NAME="Submit" VALUE="Submit">
  </td>
</tr>

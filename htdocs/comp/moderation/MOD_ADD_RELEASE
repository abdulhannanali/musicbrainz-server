<%method ShowPreviousValue>
% 	my $this = shift;
</%method>

<%method ShowNewValue>
<%perl>

 	my $this = shift;
 	my $inline = shift;

	my $new = $this->{'new_unpacked'};
	(my $name) = grep { defined } ($new->{'AlbumName'}, "[error]");
	(my $id) = grep { defined } (@$new{'AlbumId', '_albumid'}, 0);

	my $release = MusicBrainz::Server::Release->new($this->{DBH});
	$release->SetId($id);
	my $exists = $release->LoadFromId;

	if (!$inline and $exists and UserPreference::get('mod_add_album_inline'))
	{
		my $ar = MusicBrainz::Server::Artist->new($this->{DBH});
		$ar->SetId($release->GetArtist);
		if ($ar->LoadFromId)
		{

</%perl>

	<& "/comp/album",
		artist => $ar,
		album => $release,
		showmodlinks=> UserPreference::get('mod_add_album_link'),
		showids	=> 1,
		showreleases => 1,
	&>

	<& "/edit/annotation/latest",
		album => $release,
		explain => 0,
		show_info => 0,
		header => "Annotation"
	&>

%		}
%	}
%	else
%	{

	<table class="editfields">
		<tr>
			<td class="lbl">New:</td>
			<td>
			 	<& /comp/linkrelease, id => $exists ? $id : -1, name => $name, strong => 0 &>
			 </td>
		</tr>
	</table>

%	}

</%method>

%# vi: set ts=4 sw=4 ft=mason :

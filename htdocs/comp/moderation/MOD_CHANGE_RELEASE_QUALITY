<%method ShowPreviousValue>

</%method>

<%method ShowNewValue>

%	my $self = shift;
%	my $releases = $self->{'_new_releases'};

	<table class="editfields">
%	my $i = 0;
%	for my $release (@$releases)
%	{
		<tr>
			<td class="lbl"><% $i++ == 0 ? "Old:" : "" %></td>
			<td class="field">
					<% ModDefs::GetQualityText($release->{prev_quality}) %>
			</td>
		</tr>
%	}
		<tr>
			<td class="lbl">New:</td>
			<td class="field">
					<% ModDefs::GetQualityText($self->{_quality}) %>
			</td>
		</tr>
	</table>


</%method>


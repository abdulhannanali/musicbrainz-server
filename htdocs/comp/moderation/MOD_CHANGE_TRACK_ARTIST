<%method ShowPreviousValue>
<%perl>
 	my $this = shift;

	my ($exists, $id, $name, $sortname, $resolution) =
		($this->{"old.exists"}, $this->GetArtist,
		 $this->GetPrev, $this->{"old.sortname"},
		 $this->{"old.resolution"});

</%perl>

	<table class="editfields">
		<tr>
			<td class="lbl">Old:</td>
			<td><& /comp/linkartist,
				id => ($exists ? $id : -1),
				name => $name,
				sortname => $sortname,
				title => ($exists ? undef : "Id: $id"),
				resolution => $resolution &></td>
		</tr>
	</table>

</%method>


<%method ShowNewValue>
<%perl>
 	my $this = shift;

	my ($exists, $id, $name, $sortname, $resolution) =
		($this->{'new.exists'},
		 $this->{'new.exists'} ? $this->{'new.id'} : -1,
		 $this->{'new.name'}, $this->{'new.sortname'},
		 $this->{'new.resolution'});

</%perl>

	<table class="editfields">
		<tr>
			<td class="lbl">New:</td>
			<td><& /comp/linkartist,
				id => ($exists ? $id : -1),
				name => $name,
				sortname => $sortname,
				title => ($exists ? undef : "Id: $id"),
				resolution => $resolution &></td>
		</tr>
	</table>

</%method>

%# vi: set ts=4 sw=4 ft=mason :

<%method ShowPreviousValue>
<%perl>
 	my $this = shift;

	my ($exists, $id, $name, $resolution) = (0, $this->GetArtist, $this->GetPrev, $this->{'old.res'});

	my $artist = Artist->new($this->{DBH});
	$artist->SetId($id);
	$exists = $artist->LoadFromId;

</%perl>

	<table class="editfields">
		<tr>
			<td class="lbl">Old:</td>
			<td><& /comp/linkartist,
				$exists
				? (artist => $artist)
				: (
					id => $id,
					name => $name,
					resolution => $resolution
				  ), &></td>
		</tr>
	</table>

</%method>


<%method ShowNewValue>
<%perl>
 	my $this = shift;

	my ($exists, $id, $name, $sortname, $resolution) =
		($this->{'new.exists'},
		 $this->{'new.exists'} ? $this->{'new.id'} : -1,
		 $this->{'new.name'},
		 $this->{'new.sortname'},
		 $this->{'new.res'});

	my $artist = Artist->new($this->{DBH});
	if ($exists)
	{
		$artist->SetId($id);
		$exists = $artist->LoadFromId;
	}

</%perl>

	<table class="editfields">
		<tr>
			<td class="lbl">New:</td>
			<td><& /comp/linkartist,
				$exists
				? (artist => $artist)
				: (
					id => $id,
					name => $name,
					sortname => $sortname,
					resolution => $resolution
				  ), &></td>
		</tr>
	</table>

</%method>

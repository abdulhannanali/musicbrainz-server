<%method ShowPreviousValue>
% 	my $self = shift;
% 	my $prev = $self->{'prev_unpacked'};

	<table class="editfields">
		<tr>
			<td class="lbl">old:</td>
			<td><a href="/doc/<% $prev->{Page} %>"><% $prev->{Page} %></a></td>
		</tr>
		<tr>
			<td class="lbl">Version:</td>
			<td><% $prev->{Rev} ? "version " . $prev->{Rev} : "NEW" %></td>
		</tr>
	</table>

</%method>

<%method ShowNewValue>
% 	my $self = shift;
% 	my $new = $self->{'new_unpacked'};

	<table class="editfields">
		<tr>
			<td class="lbl">Version:</td>
			<td><% $new->{Rev} ? "version " . $new->{Rev} : "DELETED" %></td>
		</tr>
	</table>

</%method>

%# vi: set ts=4 sw=4 ft=mason :

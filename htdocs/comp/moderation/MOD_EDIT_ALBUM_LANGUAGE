<%method ShowPreviousValue>
<%perl>
	my $self = shift;
	my $releases = $self->{'_new_albums'};

	$m->out(qq!<table class="editfields">!);
	for my $release (@$releases)
	{
		$m->out(qq!<tr><td>!);
		$m->comp("/comp/linkrelease", id => $release->{'id'}, name => $release->{'name'});

		my $lang = "Not set";
		if ($release->{prev_lang})
		{
			my $l = MusicBrainz::Server::Language->newFromId(
						$self->{DBH}, $release->{prev_lang});
			$lang = $l->GetName;
		}

		my $script = "Not set";
		if ($release->{prev_script})
		{
			my $s = MusicBrainz::Server::Script->newFromId(
						$self->{DBH}, $release->{prev_script});
			$script = $s->GetName;
		}
		$m->out(qq!<div class="attrlist">!);
		$m->out(qq!(<span class="explain" title="Language">$lang</span>, !);
		$m->out(qq!<span class="explain" title="Script">$script</span>)</div>!);
		$m->out(qq!</td></tr>!);
	}
	$m->out(qq!</table>!);

</%perl>
</%method>

<%method ShowNewValue>
<%perl>
 	my $self = shift;

	my $lang = "Not set";
 	if ($self->{_languageid})
	{
	   	$lang = MusicBrainz::Server::Language->newFromId(
					$self->{DBH}, $self->{_languageid});
		$lang = $lang->GetName;
	}

	my $script = "Not set";
 	if ($self->{_scriptid})
	{
	   	$script = MusicBrainz::Server::Script->newFromId(
					$self->{DBH}, $self->{_scriptid});
		$script = $script->GetName;
	}

</%perl>

	<table class="editfields">
		<tr>
			<td class="lbl">Language:</td>
			<td><% $lang %></td>
		</tr>
		<tr>
			<td class="lbl">Script:</td>

			<td><% $script %></td>
		</tr>
	</table>

</%method>

%# vi: set ts=4 sw=4 ft=mason :

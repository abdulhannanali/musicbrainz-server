%				}
%				if ($t->{"n"})
%				{
					- Catalog #: <% $t->{"n"} %>
%				}
%				if ($t->{"b"})
%				{
					- Barcode: <% $t->{"b"} %>
%				}
			</td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td class="field">
				<& /comp/releasedate, $t->{"nd"} &> - <& .ShowCountryName, $t->{"nc"} &>
%				if ($t->{"nl"})
%				{
%					my $label = Label->new($self->{DBH});
%					$label->SetId($t->{"nl"});

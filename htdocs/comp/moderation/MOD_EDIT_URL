<%method ShowPreviousValue>
</%method>

<%method ShowNewValue>
%	my $self = shift;
%	my $prev = $self->{'prev_unpacked'};
%	my $new = $self->{'new_unpacked'};
%	my $id = $self->GetId;

	<table class="editdiff">

%	if ($prev->{'URL'} ne $new->{'URL'})
%	{
		<tr class="top">
			<td class="lbl" rowspan="2">URL:</td>
			<td class="diff" id="ov::url<% $id %>"><a href="<% $prev->{'URL'} %>"><% $prev->{'URL'} %></a></td>
		</tr>
		<tr>
			<td class="diff" id="nv::url<% $id %>"><a href="<% $new->{"URL"} %>"><% $new->{"URL"} %></a></td>
		</tr>
%	}
	
%	if ($prev->{'Desc'} ne $new->{'Desc'})
%	{
		<tr>
			<td class="lbl" rowspan="2">Description:</td>
			<td class="diff" id="ov::editdesc<% $id %>"><% $prev->{'Desc'} %></td>
		</tr>
		<tr>
			<td class="diff" id="nv::editdesc<% $id %>"><% $new->{"Desc"} %></td>
		</tr>
%	}

	</table>
	
</%method>

%# vi: set ts=4 sw=4 ft=mason :

<%method ShowPreviousValue>
% 	my $this = shift;

	<table class="editfields">
		<tr>
			<td class="lbl">Old:</td>

%	my ($id, $name, $title) = ($this->GetRowId, $this->GetPrev);
%	if ($this->GetStatus == &ModDefs::STATUS_APPLIED)
%	{
%		$title = "This artist has been merged, id: $id";
%		$id = -1;
%	}

			<td><& /comp/linkartist, id => $id, name => $name, title => $title &></td>
		</tr>
	</table>

</%method>

<%method ShowNewValue>
% 	my $this = shift;

	<table class="editfields">

% 	if ($this->{"new.id"})
%	{

		<tr>
			<td class="lbl">New:</td>
			<td><& /comp/linkartist, id => $this->{"new.id"}, name => $this->{'new.name'} &></td>
		</tr>

% 	}
%	else
%	{
		<tr>
			<td class="lbl">Name:</td>
			<td><% $this->{'new.name'} %></td>
		</tr>

% 		if ($this->{'new.name'} ne $this->{'new.sortname'})
%		{

		<tr>
			<td class="lbl">Sortnm.:</td>
			<td><% $this->{'new.sortname'} %></td>
		</tr>

% 		}
% 	}

	</table>

</%method>

%# eof

<%method ShowNewValue>
% 	my $this = shift;

	<table class="editfields">
		<tr>
			<td class="lbl">Merge:</td>
			<td>

<%perl>

	$m->comp("/comp/linklabel",
		id => $this->GetRowId == $this->{"new.id"} ? -1 : $this->GetRowId,
		name => $this->GetPrev,
		strong => 0);

</%perl>

			</td>
		</tr>
		<tr>
			<td class="lbl">Into:</td>
			<td>

<%perl>

 	if ($this->{"new.id"})
	{
		my $label = Label->new($this->{DBH});
		$label->SetId($this->{"new.id"});
		if ($label->LoadFromId)
		{
			$m->comp("/comp/linklabel", label => $label, strong => 0);
		}
		else
		{
			$m->comp("/comp/linklabel",
				id => $this->{"new.id"},
				name => $this->{'new.name'},
				name => $this->{'new.sortname'},
				strong => 0);
		}
 	}
	else
	{

</%perl>

				Name: <% $this->{'new.name'} %>

% 		if ($this->{'new.name'} ne $this->{'new.sortname'})
%		{

				(Sortname: <% $this->{'new.sortname'} %>)

%		}
% 	}

			</td>
		</tr>
	</table>

</%method>


<%method ShowPreviousValue>
%	my $this = shift;
</%method>

<%method ShowNewValue>
% 	my $this = shift;
% 	my $new = $this->{'new_unpacked'};
%	(my $discid) = grep { defined } ($new->{'DiscId'}, "[unknown]");

	<table class="editfields" style="width:100%">
		<tr>
			<td class="lbl">Move:</td>

% 	if (my $cdtocid = $new->{"CDTOCId"})
%	{
			<td>DiscID <a href="/show/cdtoc/?cdtocid=<% $cdtocid %>"><% $discid %></a> to</td>
% 	}
%	else
%	{
			<td><% $discid %></td>
% 	}
		<tr>
			<td class="lbl">Release:</td>
			<td><& /comp/linkrelease, id => $new->{'NewAlbumId'}, name => $new->{'NewAlbumName'} &></td>
		</tr>
	</table>

</%method>

%# eof

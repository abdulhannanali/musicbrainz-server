<%method ShowPreviousValue>

</%method>

<%method ShowNewValue>
% 	my $this = shift;

	<table class="editfields">
		<tr>
			<td class="lbl">From:</td>
			<td>

<%perl>

	my $artistexists = 0;
	my $artist = MusicBrainz::Server::Artist->new($this->{DBH});
	$artist->SetId($this->GetArtist);
	if ($artist->LoadFromId)
	{
		$m->comp("/comp/linkartist", artist => $artist, strong => 0);
	}
	else
	{
		$m->comp("/comp/linkartist",
			id => $this->GetArtist,
			name => $this->GetPrev,
			sortname => $this->{'old.sortname'},
			resolution => $this->{'old.res'},
			strong => 0);
	}

</%perl>

			</td>
		</tr>
		<tr>
			<td class="lbl">To:</td>
			<td>

<%perl>

	$artist->SetId($this->{'new.artistid'});
	if ($artist->LoadFromId)
	{
		$m->comp("/comp/linkartist", artist => $artist, strong => 0);
	}
	else
	{
		$m->comp("/comp/linkartist",
			id => $this->{'new.artistid'},
			name => $this->{'new.name'},
			sortname => $this->{'new.sortname'},
			resolution => $this->{'new.res'},
			strong => 0);
	}

</%perl>

			</td>
		</tr>
		<tr>
			<td class="lbl">&nbsp;</td>
			<td>
				Move&nbsp;Tracks: <% $this->{'new.movetracks'} ? "yes" : "no" %>
			</td>
		</tr>
	</table>

</%method>


<%method ShowPreviousValue>
% my $this = shift;
</%method>

<%method ShowNewValue>
% 	my $this = shift;
%	my $new = $this->{'new_unpacked'};

	<table class="editfields" style="width:100%">
		<tr>
			<td class="lbl">Remove:</td>

% 	if (my $cdtocid = $new->{"CDTOCId"})
%	{
			<td>Disc ID <a href="/show/cdtoc/?cdtocid=<% $cdtocid %>"><% $this->GetPrev %></a></td>
% 	}
%	else
%	{
			<td><% $this->GetPrev %></td>
% 	}
			<td style="text-align: right">
				<img src="/images/edit.gif" alt=""/>
				<a href="/show/release/details.html?releaseid=<% $this->{"albumid"} %>&show=both#discid">View DiscIDs</a>
			</td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td colspan="2">
%	if ($this->GetStatus == &ModDefs::STATUS_APPLIED)
%	{
				has been removed from this release.
%	}
%	else
%	{
				to be removed from this release.
%	}
			</td>
		</tr>
	</table>

</%method>


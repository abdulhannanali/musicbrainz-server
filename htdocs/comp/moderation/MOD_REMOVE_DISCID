	<a href="/showcdtoc.html?id=<% $cdtocid %>"><% $this->GetPrev %></a>
	<br>Album:
	<a href="/showalbum.html?albumid=<% $new->{"AlbumId"} %>"
		><% $new->{"AlbumName"} %></a>
% } else {
	<% $this->GetPrev %>
% }

</%method>


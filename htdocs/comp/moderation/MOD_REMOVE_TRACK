<%method ShowPreviousValue>
<%perl>
	my $this = shift;

	my $release = Album->new($this->{DBH});
	$release->SetId($this->{'prev.albumid'});
	my $r_exists = $release->LoadFromId;

	my $track = Album->new($this->{DBH});
	$track->SetId($this->GetRowId);
	my $t_exists = $track->LoadFromId;

</%perl>

	<table class="editfields">
		<tr>
			<td class="lbl">Track:</td>
% 	if (defined $this->{'prev.trackname'})
%	{
			<td><% $this->{'prev.trackname'} %></td>
% 	} else {
			<td>n/a</td>
%	}
		</tr>
	</table>

	<div class="attrlist">

% 	if (defined $release->GetName)
%	{

		Release: <% $release->GetName %><br/>

% 	}

% 	if (!$this->{'prev.isnonalbumtracks'} and
%		defined $this->{'prev.trackseq'})
%	{

		Track #: <% $this->{'prev.trackseq'} %><br/>

% 	}

% 	if (defined $this->{'prev.tracklength'})
%	{

		Track Length: <% Track::FormatTrackLength($this->{'prev.tracklength'}) %><br/>

% 	}

	</div>

</%method>

<%method ShowNewValue>
% 	my $this = shift;
</%method>

%# eof

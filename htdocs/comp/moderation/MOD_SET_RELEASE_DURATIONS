<%method ShowPreviousValue>
% 	my $this = shift;
</%method>

<%method ShowNewValue>
% 	my $this = shift;
%   my $new = $this->{'new_unpacked'};

	<table class="editdiff">
		<tr>
			<td class="lbl">Old:</td>
%	my @prev_vals = split(/ /,$this->GetPrev);
%	for (my $i = 0; $i < @prev_vals; $i++) {
			<td style="padding-right: 5px" class="diff" id="ov::edit<% $this->GetId %>_trk<% $i+1 %>"><% $prev_vals[$i] %></td>
%	}
		</tr>
		<tr>
			<td class="lbl">New:</td>
%	my @new_vals = split(/ /,$new->{NewDurs});
%	for (my $i = 0; $i < @new_vals; $i++) {
			<td style="padding-right: 5px" class="diff" id="nv::edit<% $this->GetId %>_trk<% $i+1 %>"><% $new_vals[$i] %></td>
%	}
		</tr>
		<tr>
			<td class="lbl">&nbsp;</td>
			<td class="diff" colspan="<% scalar(@new_vals) %>"><a href="/show/cdtoc/?cdtocid=<% $new->{CDTOCId} %>">View CD TOC</a></td>
		</tr>
	</table>

</%method>

%# vi: set ts=4 sw=4 ft=mason :

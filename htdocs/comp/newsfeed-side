<%args>

	$url
	$max_items 			=> undef
	$update_interval 	=> 5*60
	$categories 		=> [ ]

</%args>
<%perl>

	my $feed = MusicBrainz::Server::NewsFeed->new(
		url => $url,
		update_interval => $update_interval,
		max_items => $max_items,
		categories => $categories,
	);

	$feed->Load() if defined $feed;

</%perl>


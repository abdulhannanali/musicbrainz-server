				my $discid = $cdtoc->GetDiscID;
				my $mismatch = (defined $id_numtracks and
							 	$id_numtracks != $release->GetTrackCount);

				# 1. TOC
				my $colspan = ($isva ? 3 : 2);
</%perl>
				<tr class="discid">

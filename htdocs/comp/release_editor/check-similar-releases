	#  implied, including  but not limited  to the warranties of  merchantability,
	#  fitness for a particular purpose and noninfringement. In no event shall the
	#  authors or  copyright  holders be  liable for any claim,  damages or  other
	#  liability, whether  in an  action of  contract, tort  or otherwise, arising
	#  from,  out of  or in  connection with  the software or  the  use  or  other
	#  dealings in the software.
	#
	#  GPL - The GNU General Public License    http://www.gnu.org/licenses/gpl.txt
	#  Permits anyone the right to use and modify the software without limitations
	#  as long as proper  credits are given  and the original  and modified source
	#  code are included. Requires  that the final product, software derivate from
	#  the original  source or any  software  utilizing a GPL  component, such  as
	#  this, is also licensed under the GPL license.
	# -----------------------------------------------------------------------------
	#
	# Summary:
	# -----------------------------------------------------------------------------
	# Check the database for similar releases. If some were found, prompt
	# if the user wants to cancel the add release process.
	#
	# $Id$
	#
</%perl>
<%args>

	$mb
	$artistid => 0
	$tracks => 0
	$releasename => ""

</%args>
<%perl>

	my %similarreleases;
	my @similar;

	if ($artistid)
	{
		my $ar = Artist->new($mb->{DBH});
		$ar->SetId($artistid);
		$ar->LoadFromId();

		# only check if releasename is set.
		if ($releasename ne "")
		{
			my @releases = $ar->HasAlbum($releasename, .8);

			for my $match (@releases)
			{
				my $release = Album->new($ar->{DBH});
				$release->SetId($match->{id});
				$release->LoadFromId
					or next;
				next unless $release->GetTrackCount == $tracks;

				$release->{_exact_} = 1
					if $match->{match} >= 0.999;
				$release->{_pct_match_} = $match->{match} * 100;


				push @similar, $release;
				$similarreleases{$release->GetId} = 1;
			}
		}

		# if we found > 0 releases with great similarity
		if (@similar)
		{
			$m->comp("/comp/form/begin", title => "Similar Albums Found");
			$m->comp("/comp/form/label", class => " hidden");
			$m->comp("/comp/form/feedbackbox", "info", "",
				"MusicBrainz already contains one or more releases that have
				the same amount of tracks and a similar title as the
				release that you are about to add."
			);
			$m->out('<br/>');

			for my $release (@similar)
			{
				$m->comp("/comp/form/label", title => int($release->{_pct_match_})."% match");
				$m->out('<div class="float">');
				$m->out('<table width="600" cellspacing="0" cellpadding="0"><tr><td>');
				$m->comp("/comp/album",
					artist => $ar,
					album => $release,
					showmodlinks => 0,
					showids => 1
				);
				$m->out('</td></tr></table>');
				$m->out('</div>');
				$m->out('<br/>');
			}
			$m->out('<br/>');

			$m->comp("/comp/form/label", class => " hidden");
			$m->comp("/comp/form/feedbackbox", "warning", "",
				"Please do <b>not</b> add releases that are already
				present in the database! Are you sure you want to
				continue adding this release?"
			);
			$m->out('<br/>');

			$m->comp("/comp/form/label", class => " hidden");


			# use un-named submit button, else it shows up in the
			# location of the browser
			$m->out('<form action="/index.html">');
			$m->out('<input type="submit" class="button" value="Abort &raquo;" />');
			$m->out('</form>');

			# Confirm action is on the right side if 2
			# buttons are shown inline
			$m->out('<form action="'.$ARGS{"v::action"}.'" method="POST">');
			$m->comp("/comp/form/buttonsubmit",
				name => "force_similar",
				value => $ARGS{"SUBMIT_FORCESIMILAR"});
			$m->comp("/comp/args-to-hidden-fields.inc", %ARGS);
			$m->out('</form>');

			$m->out('<br/>');
			$m->comp("/comp/form/end");

			$ARGS{"v::validate"} = 0;
			$ARGS{"v::showform"} = 0;
			$ARGS{"v::checkedsimilar"} = 0;
		}
		else
		{
			$ARGS{"v::checkedsimilar"} = 1;
		}
	}

	return %ARGS;

</%perl>


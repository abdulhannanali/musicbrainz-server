<%args>

	$artistid
	%checkattributes
	$tabindex

	$attr_type => -1
	$attr_status => -1
	$attr_type_guessed => ""
	$attr_status_guessed => ""

</%args>
<%perl>

	# lets see if we have to highlight the fields
	my $typecss = $checkattributes{"attr_type"} ? " missing" : "";
	my $statuscss = $checkattributes{"attr_status"} ? " missing" : "";

</%perl>

			<tr id="attributes" class="spaced">
				<td class="label">
					<label class="label">Attributes:</label></td>
				<td colspan="2"></td>
				<td colspan="2">
					<select name="attr_type" tabindex="<% ++$$tabindex %>" class="<% $typecss %>">
					<& /comp/options,
						do {
							[
								[ "-1", "select type..." ],
								[ ""  , "i don't know" ],
								(map {
									[ $_, Album->GetAttributeName($_) ]
								} &Album::ALBUM_ATTR_SECTION_TYPE_START
									.. &Album::ALBUM_ATTR_SECTION_TYPE_END)
							]
						},
						$attr_type
					&>
					</select>
					&nbsp;
					<select name="attr_status" tabindex="<% ++$$tabindex %>" class="<% $statuscss %>">
					<& /comp/options,
						do {
							[
								[ "-1", "select status..." ],
								[ ""  , "i don't know" ],
								(map {
									[ $_, Album->GetAttributeName($_) ]
								} &Album::ALBUM_ATTR_SECTION_STATUS_START
									.. &Album::ALBUM_ATTR_SECTION_STATUS_END)
							]
						},
						$attr_status
					&>
					</select>
					<& /comp/form/buttonsubmit, value => $ARGS{"SUBMIT_ATTR_GUESS"}, tabindex => ++$$tabindex &>
					<& /comp/form/hiddenfield, "attr_type_guessed",  $attr_type_guessed &>
					<& /comp/form/hiddenfield, "attr_status_guessed",  $attr_status_guessed &></td>
				<td colspan="2">
					[ <a href="/popup/ReleaseAttribute" title="POPUP::ReleaseAttribute::400::300">help</a> ]</td>
			</tr>

%# vi: set ts=4 sw=4 ft=mason :
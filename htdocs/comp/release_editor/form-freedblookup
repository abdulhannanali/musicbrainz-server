%	# freedb import help-box.
%	if (!$noncd)
%	{

		<tr>
			<td colspan="3"></td>
			<td colspan="5">
				<div id="releaseeditor::freedb" style="margin-bottom: 15px">


%		# if lookup was successful, show help text.
%		if ($ARGS{"freedb_performed"})
%		{
%			if ($ARGS{"freedb_success"})
%			{
			<& /comp/form/feedbackbox, "info",
				qq!Found release listing on FreeDB!,
				qq!Imported the data from <a href="http://www.freedb.org">FreeDB.org</a>.
				Please check the information below for accuracy and correct any
				mistakes you may find.! &>
%			}
%			else
%			{

			<& /comp/form/feedbackbox, "info",
				qq!Release not found on FreeDB!,
				qq!Sorry, did not find any applicable releases on
				  <a href="http://www.freedb.org">FreeDB.org</a>! &>
%			}
%		}

				<& /comp/form/buttonsubmit, value => $ARGS{"SUBMIT_FREEDB"} &>
				<input type="checkbox" name="freedb_swap" value="1" /> Swap Artist and Track fields.
				</div>
			</td>
		</tr>

%	}
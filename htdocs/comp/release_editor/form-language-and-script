<%perl>
	# -----------------------------------------------------------------------------
	#                               Musicbrainz.org
	#                        Copyright (c) 2001 Robert Kaye
	# -----------------------------------------------------------------------------
	#  This software is provided "as is", without warranty of any kind, express or
	#  implied, including  but not limited  to the warranties of  merchantability,
	#  fitness for a particular purpose and noninfringement. In no event shall the
	#  authors or  copyright  holders be  liable for any claim,  damages or  other
	#  liability, whether  in an  action of  contract, tort  or otherwise, arising
	#  from,  out of  or in  connection with  the software or  the  use  or  other
	#  dealings in the software.
	#
	#  GPL - The GNU General Public License    http://www.gnu.org/licenses/gpl.txt
	#  Permits anyone the right to use and modify the software without limitations
	#  as long as proper  credits are given  and the original  and modified source
	#  code are included. Requires  that the final product, software derivate from
	#  the original  source or any  software  utilizing a GPL  component, such  as
	#  this, is also licensed under the GPL license.
	# -----------------------------------------------------------------------------
	#
	# Summary:
	# -----------------------------------------------------------------------------
	# Render the language/script section of the release editor form.
	#
	# $Id$
	#
</%perl>
<%args>

	$mb
	$tabindex

	$attr_language => -1
	$attr_script => -1
	$attr_showall => 0

</%args>
<%perl>

	# get validation hash
	my %checklanguage;
	%checklanguage = %{ $ARGS{"v::language"} } if (ref $ARGS{"v::language"} eq "HASH");

	# compile list of scripts, be sure to include
	# the current value (if compact list is shown)
	my @scripts = MusicBrainz::Server::Script->Menu($mb->{DBH},
		minimum_frequency => ( $attr_showall ? 0 : 4 ),
		include => $attr_script
	);
	unshift @scripts, [ "-1", "Select script..." ];

	# compile list of languages, be sure to include
	# the current value (if collapsed)
	my @languages = MusicBrainz::Server::Language->Menu($mb->{DBH},
		minimum_frequency => ( $attr_showall ? 1 : 2 ),
		include => $attr_language
	);
	unshift @languages, [ "-1", "Select language..." ];

	# configure css-style for compact/full list
	my $dropdownstyle = ($attr_showall ? "" : "width: 200px");
	my $submit_togglelists = ($attr_showall ? $ARGS{"SUBMIT_LANG_COMPACT"} : $ARGS{"SUBMIT_LANG_FULL"});

	# lets see if we have to highlight the fields
	my $languagecss = $checklanguage{"attr_language"} ? qq!class="missing"! : "";
	my $scriptcss = $checklanguage{"attr_script"} ? qq!class="missing"! : "";

	my $languagelabel = "Language";
	$languagelabel .= " [!]" if ($checklanguage{"attr_language"});

	my $scriptlabel = "Script";
	$scriptlabel .= " [!]" if ($checklanguage{"attr_script"});

</%perl>

			<tr id="releaselanguage">
				<td class="label" colspan="3">
					<label class="label"><% $languagelabel %>:</label></td>
				<td colspan="2">
					<select name="attr_language" style="<% $dropdownstyle %>" tabindex="<% ++$$tabindex %>" <% $languagecss |n %>>
						<& /comp/options, \@languages, $attr_language &>
					</select>
					<& /comp/form/buttonsubmit, value => $ARGS{"SUBMIT_LANG_GUESS"}, tabindex => ++$$tabindex &></td>
				<td colspan="2">
					[ <a href="/popup/ReleaseLanguage" title="POPUP::ReleaseLanguage::400::300">help</a> ]</td>
			</tr>
			<tr>
				<td class="label" colspan="3">
					<label class="label"><% $scriptlabel %>:</label></td>
				<td colspan="2">
					<select name="attr_script" style="<% $dropdownstyle %>" tabindex="<% ++$$tabindex %>" <% $scriptcss |n %>>
						<& /comp/options, \@scripts, $attr_script &>
					</select>
                    <br/><span style="font-size: x-small">Hint: If this release/CD is in English, please select the Latin script.</span><br/>
					<& /comp/form/buttonsubmit, value => $submit_togglelists, tabindex => ++$$tabindex &></td>
				<td colspan="2">
					[ <a href="/popup/ReleaseLanguage" title="POPUP::ReleaseLanguage::400::300">help</a> ]
					<input type="hidden" name="attr_showall" value="<% $attr_showall %>" /></td>
			</tr>

%# vi: set ts=4 sw=4 ft=mason :

<%args>

	%checkmacsac
	$dummycounter

</%args>

%	if ($checkmacsac{"sac"})
%	{

		<tr>
			<td colspan="3"></td>
			<td colspan="3">
				<& /comp/form/feedbackbox, "warning", "",
					qq!You have chosen to enter a "Various Artists"
					   release, but all the artist names are the same,
					   so this should probably be entered as a
					   "Single Artist" release. What do you want to do?!
				&></td>
			</td>
		</tr>
		<tr>
			<td colspan="3"></td>
			<td colspan="3">
				<& /comp/form/buttonsubmit, value => $ARGS{"SUBMIT_IGNOREMACSAC"} &>
				<& /comp/form/buttonsubmit, value => $ARGS{"SUBMIT_TOSAC"} &>
			</td>
		</tr>

%	}

%	if ($checkmacsac{"mac"})
%	{

		<tr>
			<td colspan="3"></td>
			<td colspan="3">
				<& /comp/form/feedbackbox, "warning", "",
					qq!You have chosen to enter a "Single Artist"
					   release, but looking at the track names it
					   seems that maybe this should be a "Various
					   Artists" release. (This message appears
					   because all track names contain either
					   "-" or "/"). What do you want to do?"! &></td>
			</td>
		</tr>
		<tr>
			<td colspan="3"></td>
			<td colspan="3">
				<& /comp/form/buttonsubmit, value => $ARGS{"SUBMIT_IGNOREMACSAC"} &>
				<& /comp/form/buttonsubmit, value => $ARGS{"SUBMIT_TOMAC"} &>
			</td>
		</tr>

%	}

%# vi: set ts=4 sw=4 ft=mason :
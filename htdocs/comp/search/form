<%args>

	$name
	$nameurl => ""
	$scripturl
	$searchfield
	$method => "post"
	@hidden => ""
	$formname => undef

</%args>
<%perl>

	# formname is deprecated in xhtml 1.1
	my $formid = $formname ? ' id="searchbox_'.$formname.'" ' : "";

	# parameter must be lowercase
	$method = lc($method);

	# wrap nameurl into <a> tags, else plain name.
	$nameurl = $nameurl ne "" ? qq!<a href="$nameurl" title="$name">$name</a>! : $name;

</%perl>

	<form method="<% $method %>" action="<% $scripturl %>" <% $formid %>>
		<table class="formstyle" style="margin-bottom: 10px">
			<tr>
				<td class="labelnopad"><% $nameurl |n %></td>
				<td>
					<input type="text" name="<% $searchfield %>" size="20" />
					<input type="submit" value="Lookup" />

<%perl>

	my $hide;
	while ($hide = shift(@hidden))
	{
		my $value = shift(@hidden); ;
		$m->out(qq!<input type="hidden" name="$hide" !);
		$m->out(qq! value="$value" !) if ($value ne "");
        $m->out(" />");
	}

</%perl>
				</td>
			</tr>
		</table>
	</form>

%# vi: set ts=4 sw=4 ft=mason :
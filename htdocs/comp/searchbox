<%args>
$name
$nameurl=>''
$scripturl
$searchfield
$method=>'POST'
@hidden=>''
</%args>
% my $hide;
<FORM METHOD="<% $method %>" ACTION="<% $scripturl |n%>"
      ENCTYPE="application/x-www-form-urlencoded" class="formstyle">
<center>
<table border=0 width="250">
  <tr>
  <td>
% if ($nameurl ne '') {
      <b><a href="<% $nameurl %>"><% $name %></a></b><br>
% } else {
      <b><% $name %></b><br>
% }
  </td>
  </tr>
  <tr>
  <td align="center">
     <INPUT TYPE="text" NAME="<% $searchfield %>" SIZE=30>
     <INPUT TYPE="submit" VALUE="Search"><br>
  </td>
  </tr>
</table>

% while( $hide = shift(@hidden) ) {
<INPUT TYPE="hidden" NAME="<% $hide %>" 
% $hide=shift(@hidden); if ($hide ne '') {
   VALUE="<% $hide %>">
%  } else {
                      >
%  }
% }

</center>
</form>

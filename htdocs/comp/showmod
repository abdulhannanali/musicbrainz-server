<%args>
$id
$table
$column
$rowid
$prev
$new
$time
$moderator
$yesvotes
$novotes
$voted
</%args>

<%perl>

my $text = "X";
if ($voted)
{
   $text = "V";
}

</%perl>

<tr>
   <td width=10% valign=top>
     <% $table %>
   </td>
   <td width=35% valign=top>
     <& /comp/showmodprev, prev=>$prev, table=>$table, id=>$rowid &>
   </td>
   <td width=35% valign=top>
     <% $new %>
   </td>
   <td width=5% align=center valign=top>
     <% $yesvotes %>,
     <% $novotes %>
   </td>
% if ($session{uid} != $moderator && !$voted) {
     <td width=5% align=center valign=top>
     <input type="radio" name="rowid<% $id %>" value="yes">
     </td>
% } else {
     <td width=5% align=center valign=top>
     <% $text %> 
     </td>
% }
   </td>
% if ($session{uid} != $moderator && !$voted) {
     <td width=5% align=center valign=top>
     <input type="radio" name="rowid<% $id %>" value="no">
     </td>
% } else {
     <td width=5% align=center valign=top>
     <% $text %> 
     </td>
% }
% if ($session{uid} != $moderator && !$voted) {
     <td width=5% align=center valign=top>
     <input type="radio" name="rowid<% $id %>" value="abstain" CHECKED>
     </td>
% } else {
     <td width=5% align=center valign=top>
     <% $text %> 
     </td>
% }

<%args>
$mb
$id
$table
$rowid
$artist
$type
$prev
$new
$time
$moderator
$yesvotes
$novotes
$voted
$artistname
$status
$mode
</%args>

<%perl>

my $text = "(Your change)";
if ($voted)
{
   $text = "(Already voted)";
}
my @entered = gmtime($time);
$time = sprintf "%d-%d %02d:%02d", $entered[4]+1, $entered[3], 
                                   $entered[2], $entered[1];

</%perl>


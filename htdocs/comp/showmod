     <& /comp/showmodtype, mb=>$mb, id=>$rowid, type=>$type, prev=>$prev, 
                           artist=>$artist, artistname=>$artistname &>
   </td>
   <td width=24% align=center valign=top valign=top bgcolor=white class="body">
     <% $yesvotes %> yes,
     <% $novotes %> no
   </td>
</tr>

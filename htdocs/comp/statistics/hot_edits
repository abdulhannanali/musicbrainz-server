<%args>
    $maxitems => 20
    $offset => 0
    $pager => 0
</%args>
<%perl>

my $mb = $m->comp("/comp/dblogin");
my $stats = MusicBrainz::Server::Statistic->new($mb->{DBH});
my ($hot, $numitems, $timestamp) = $stats->GetHotEdits($maxitems, $offset);
$timestamp = MusicBrainz::Server::DateTime::format_datetime_since($timestamp);

</%perl>

%#  Hot edits -- edits that have had many comments/votes

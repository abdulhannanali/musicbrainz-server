<%args>
	$offset => 0
	$maxitems => 25
	$pager => 0
</%args>
<%perl>

my $mb = $m->comp("/comp/dblogin");
my $stats = MusicBrainz::Server::Statistic->new($mb->{DBH});
my ($upcoming, $numitems, $timestamp) = $stats->GetUpcomingReleases($maxitems, $offset);
$timestamp = MusicBrainz::Server::DateTime::format_datetime_since($timestamp);

</%perl>

%#  Upcoming releases
	<h3>Upcoming releases</h3>
	<table class="datatable">
		<tr>
			<th>Release</th>
			<th>Artist</th>
			<th>Country/Date</th>
			<th>Format</th>
		</tr>

%	foreach my $row (@$upcoming) {
		<tr class="datatable<% ("odd", "even")[++$. % 2] %>">
			<td><a href="/release/<% $row->[0] %>.html"><% $row->[1] %></a></td>
			<td><a href="/artist/<% $row->[2] %>.html"><% $row->[3] %></a></td>
			<td><% $row->[5] %> <% MusicBrainz::Server::Validation::MakeDisplayDateStr($row->[4]) %></td>
			<td><% MusicBrainz::Server::ReleaseEvent::GetReleaseFormatName($row->[6]) %></td>
		</tr>
%   }
%   if ($pager) {
%		if ($numitems > $maxitems) {
			<tr class="datatablefooter">
				<td colspan="5">
				   <& /comp/pageselector, offset => $offset, pagesize => $maxitems, 
										  url => '/show/stats/musicnews.html',
										  args => {type=>'upcoming_releases'},
										  numitems => $numitems &>
				</td>
			</tr>
%		}
%   } else {
        <tr class="datatablefooter">
            <td colspan="5">
%			if ($numitems) {
				<a href="musicnews.html?type=upcoming_releases">see more upcoming releases</a>
%			} else {
				There are no upcoming releases. Boo!
%			}
            </td>
        </tr>
%	}
	</table>
	<p class="lastupdated">Updated <% $timestamp %></p>

%# vi: set ts=4 sw=4 ft=mason :

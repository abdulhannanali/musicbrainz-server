<%args>
$artist
$album
$nomod
$albumdetail=>0
$link=>""
$linktype=>""
</%args>

<%perl>
my $check_box = "";
my $albumid = $album->GetId();
my $script = $albumdetail ? "albumdetail" : "showalbum";
my ($image, $alt, $title);

if (exists $session{user}) 
{
   if (exists $session{tagged_albums} && 
       $session{tagged_albums} =~ m/\b$albumid\b/)
   {
       $image = "checked.gif";
       $alt = "Untag";
       $title = "Tagged. Click to untag";
   }
   else
   {
       $image = "unchecked.gif";
       $alt = "tag";
       $title = "Untagged. Click to tag";
   }
}

</%perl>
<br>

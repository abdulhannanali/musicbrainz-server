<%args>
	$add_language => 0

	$language_curr
	$script_curr

	$expand_lists => undef
	$notetext => ""

	$language_fieldname => "language_new"
	$script_fieldname => "script_new"
</%args>
<%perl>

	# get database handle
	my $mb = $m->comp("/comp/dblogin");

	# load the list of languages from the database
	my @languages_menu = MusicBrainz::Server::Language->Menu($mb->{DBH},
		minimum_frequency => ($expand_lists ? 1 : 2),
		include => $language_curr
	);

	# load the list of scripts from the database
	my @scripts_menu = MusicBrainz::Server::Script->Menu($mb->{DBH},
		minimum_frequency => ($expand_lists ? 0 : 4),
		include => $script_curr
	);

</%perl>

% 	if ($add_language) {
		<tr>
% 	}
		<tr class="spaced">

			<td class="label">
				<label for="id_<% $language_fieldname %>">Language:</label></td>
			<td class="field">
				<select name="<% $language_fieldname %>" style="<% $expand_lists ? "" : "width: 200px" %>"
					id="id_<% $language_fieldname %>">
					<& /comp/options, \@languages_menu, $language_curr &>
				</select></td>
		</tr>
		<tr>
			<td class="label">
				<label for="id_<% $script_fieldname %>">Script:</label></td>
			<td class="field">
				<select name="<% $script_fieldname %>" style="<% $expand_lists ? "" : "width: 200px" %>"
					id="id_<% $script_fieldname %>">
					<& /comp/options, \@scripts_menu, $script_curr &>
				</select></td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td>
% 	if ($expand_lists) {
				<input class="button" type="submit" name="submit" value="Show Reduced Lists" />
% 	} else {
				<input class="button" type="submit" name="submit" value="Show Full Lists" />
% 	}
				<input class="button" type="submit" name="submit" value="Guess Again" /></td>
		</tr>

% 	if ($add_language == 1) {
		<tr>
			<td>&nbsp;</td>
			<td class="padtop">
				<input 	type="submit" class="button" name="submit" value="Next &raquo;" /></td>
		</tr>
% 	} else {
		<tr>
			<td>&nbsp;</td>
			<td class="notetext">
				<& /comp/notetext, text => $notetext &></td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td>
				<input type="submit" class="button" name="submit" value="Cancel" />
				<input type="submit" class="button" name="submit" value="Enter Moderations" /></td>
		</tr>
% 	}



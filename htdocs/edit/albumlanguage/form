<%args>

	$add_language => 0

	$language_curr
	$script_curr

	$expand_lists => undef
	$notetext => ""

	$language_fieldname => "language_new"
	$script_fieldname => "script_new"

</%args>
<%perl>

	# Instantiate MusicBrainz object
	my $mb = $m->comp("/comp/dblogin");

	# compile list of scripts, be sure to include
	# the current value (if compact list is shown)
	my @scripts = MusicBrainz::Server::Script->Menu($mb->{DBH},
		minimum_frequency => ( $expand_lists ? 0 : 4 ),
		include => $script_curr
	);
	unshift @scripts, [ "-1", "Select script..." ];

	# compile list of languages, be sure to include
	# the current value (if collapsed)
	my @languages = MusicBrainz::Server::Language->Menu($mb->{DBH},
		minimum_frequency => ( $expand_lists ? 1 : 2 ),
		include => $language_curr
	);
	unshift @languages, [ "-1", "Select language..." ];

</%perl>

	<script type="text/javascript" src="/scripts/langselect.js"></script>

% 	if ($add_language)
%	{

		<tr>

% 	}

		<tr class="spaced">

			<td class="label">
				<label for="id_<% $language_fieldname %>">Language:</label></td>
			<td class="field">
				<select name="<% $language_fieldname %>" style="<% $expand_lists ? "" : "width: 200px" %>"
					id="id_<% $language_fieldname %>">
					<& /comp/options, \@languages, $language_curr &>
				</select></td>
		</tr>
		<tr>
			<td class="label">
				<label for="id_<% $script_fieldname %>">Script:</label></td>
			<td class="field">
				<select name="<% $script_fieldname %>" style="<% $expand_lists ? "" : "width: 200px" %>"
					id="id_<% $script_fieldname %>">
					<& /comp/options, \@scripts, $script_curr &>
				</select></td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td>

% 	if ($expand_lists)
%	{

				<input class="button" type="submit" name="submitvalue" id="toggle_lang_lists" value="Show reduced lists" />

% 	}
%	else
%	{

				<input class="button" type="submit" name="submitvalue" id="toggle_lang_lists" value="Show full lists" />

% 	}

				<input class="button" type="submit" name="submitvalue" value="Guess again" /></td>
		</tr>

% 	if ($add_language == 1)
%	{

		<tr>
			<td>&nbsp;</td>
			<td class="padtop">
				<input  class="button" 	type="submit" name="submitvalue" value="Next &raquo;" /></td>
		</tr>

% 	}
%	else
%	{

		<tr>
			<td>&nbsp;</td>
			<td class="notetext">
				<& /comp/notetext,
					notetext => $notetext, &></td>
		</tr>

% 	}

%# vi: set ts=4 sw=4 ft=mason :

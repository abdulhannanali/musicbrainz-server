	#  implied, including  but not limited  to the warranties of  merchantability,
	#  fitness for a particular purpose and noninfringement. In no event shall the
	#  authors or  copyright  holders be  liable for any claim,  damages or  other
	#  liability, whether  in an  action of  contract, tort  or otherwise, arising
	#  from,  out of  or in  connection with  the software or  the  use  or  other
	#  dealings in the software.
	#
	#  GPL - The GNU General Public License    http://www.gnu.org/licenses/gpl.txt
	#  Permits anyone the right to use and modify the software without limitations
	#  as long as proper  credits are given  and the original  and modified source
	#  code are included. Requires  that the final product, software derivate from
	#  the original  source or any  software  utilizing a GPL  component, such  as
	#  this, is also licensed under the GPL license.
	# -----------------------------------------------------------------------------
	#
	# Summary:
	# -----------------------------------------------------------------------------
	# This component loads the artist and release (if type=ALBUM_ANNOTATION)
	# object and returns them as list. If type is ARTIST_ANNOTATION, undef is
	# returned for the release object.
	#
	# $Id$
	#
</%perl>
<%args>

	$annotation
	$header => undef
	$expand => 1
	$explain => 0
	$short => 0
	$history_link => 0
	$show_diff => 0
	$show_log => 0
	$show_info => 0

</%args>
<%perl>

	$m->out(qq!<table class="annotation">!);

	if (defined $header)
	{
		$m->out(qq!<tr class="header">!);
		$m->out(qq!<td colspan="2">$header</td>!);
		$m->out(qq!</tr>!);
	}

	if ($expand and not $annotation->IsBlank)
	{
		$m->out(qq!<tr class="text">!);

		my $text;
		if ($short)
		{
			my $url = "/edit/annotation/show.html?annotationid=".$annotation->GetId;
			my $readmore = qq!(<a href="$url">Read&nbsp;more&hellip;</a>)!;
			$text = $annotation->GetShortTextAsHTML($readmore);
		}
		else
		{
			$text = $annotation->GetTextAsHTML();
		}
		$m->out(qq!<td colspan="2">$text</td></tr>!); # no escaping!
	}

	# only show the last summary if the user is logged in.
	if ($show_log and $session{uid})
	{
		my $log = $annotation->GetChangeLog;
		$log = "(no change log)" unless $log =~ /\S/;
		$log = $m->interp->apply_escapes($log, 'h');

		$m->out(qq!<tr class="log">!);
		$m->out(qq!<td colspan="2">Summary: $log</td>!);
		$m->out(qq!</tr>!);
	}

	if ($show_info)
	{

		# only show name of last user who changed the annotation
		# if the user is logged in.
		$m->out(qq!<tr class="info">!);
		$m->out(sprintf qq!<td class="text" %s>!, ($session{uid} ? "" : qq! colspan="2"!));
		$m->out($explain ? "Annotation last modified" : "Last modified");
		if ($session{uid})
		{
			$m->out(sprintf qq! by <a href="/show/user/?userid=%s">%s</a>!,
					$annotation->GetModerator(),
					$m->interp->apply_escapes($annotation->GetModeratorName(), 'h'));
		}
		$m->out(" on ");
		my $created = $annotation->GetCreationTime();
		$created = $m->comp("/comp/datetime", $created);
		$m->out($created);

		# show editing links only if user is logged in
		if ($session{uid})
		{
			$m->out(qq!</td><td class="links"> [ !);

			if ($history_link)
			{
				my $entitytype = $annotation->GetTypeWord;
				my $id = $annotation->GetEntity;
				$m->out(qq!<a href="/edit/annotation/$entitytype/history.html?id=$id&amp;expand_all=1">Show history</a> | !);
			}

			if ($show_diff)
			{
				$m->out(sprintf qq!<a href="/edit/annotation/diff.html?old=%d&amp;new=%d">Diff</a> | !,
								$show_diff, $annotation->GetId);
			}

			if ($expand)
			{
				$m->out(sprintf qq!<a href="/edit/annotation/show.html?annotationid=%s">Details</a> | !,
								$annotation->GetId());
				$m->comp("/edit/annotation/edit-link", annotation => $annotation);
			}
			else
			{
				$m->out(sprintf qq!<a href="/edit/annotation/show.html?annotationid=%s">Show</a>!,
								$annotation->GetId());
			}
			$m->out(" ] ");
		}
		$m->out("</td></tr>");
	}
	$m->out("</table>");

</%perl>

%# vi: set ts=4 sw=4 ft=mason :

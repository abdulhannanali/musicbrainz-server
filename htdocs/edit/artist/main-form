%#				or confusingly similar, names. Please leave this blank if this artist does <br/>
%#				not conflict with an artist of a similar name.</td>
%#		</tr>

% 		if (defined $artist) {
		<tr>
			<td class="label">
				<label>Current Comment:</label></td>
			<td class="field">
				<div class="oldtextfield"><% $artist->GetResolution() || "(none)" %></div></td>
		</tr>
% 		}
		<tr>
			<td class="label">
				<label for="editartist_resolution">Comment:</label></td>
			<td class="field">
				<input type="text" name="resolution" class="textfield"
					id="editartist_resolution" size="50" maxlength="64"
					value="<% $resolution %>" /></td>
		</tr>
% 	}

% 	if (@dupes) {
		<tr>
			<td class="label">
				<label for="editartist_confirm">Confirm:</label></td>
			<td>
			<%perl>
				$m->out(qq!<input type="checkbox" id="editartist_confirm" !);
				$m->out(qq! checked="checked" !) if ($confirm);
				$m->out(qq! name="confirm" value="1" /> !);
				$m->out(qq! I <strong>really</strong> do want to !);
				$m->out(sprintf "%s", defined $artist ? "edit" : "add");
				$m->out(qq! this artist. !);
			</%perl>
			</td>
		</tr>
%	}

		<tr>
			<td>&nbsp;</td>
			<td class="notetext">
				<& /comp/notetext, text => $notetext &></td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td class="padtop">
% if (defined $artist) {
				<input type="hidden" name="id" value="<% $artist->GetId() %>" />
				<& /comp/form/jsbutton, id=>"BTN_CANCEL|/showartist.html?artistid=".$artist->GetId &>
% }
				<input type="submit" class="button" value="Submit" />
				<input type="hidden" name="validate" value="1" />
				<input type="hidden" name="returnurl" value="<% $returnurl %>" />
			</td>
		</tr>


<%args>
	$artist => undef
	$name => ""
	$sortname => ""
	$type => 0
	$begindate => [ ]
	$enddate => [ ]
	$notetext => ""
	$returnurl => ""

	@dupes => ()
	@messages => ()
	$confirm => 0
	$resolution => ""
</%args>

<%perl>
	my $begindate_str = Artist::GetBeginDateName($type);
	my $enddate_str = Artist::GetEndDateName($type);
</%perl>

% 	if (@messages) {
		<tr>
			<td>&nbsp;</td>
			<td class="error">
				<ul>
					<li>
						<%perl> $m->out(join "</li><li>", @messages), </%perl>
					</li>
				</ul>
			</td>
		</tr>
% 	}

		<tr>
			<td class="label">
				<label for="editartist_type">Type:</label></td>
			<td>
				<select name="type" onchange="artistTypeChanged(this.value);"
					id="editartist_type">
					<& /comp/options,
					[[0, 'Unknown'], [1, 'Person'], [2, 'Group']], $type &>
				</select></td>
		</tr>
		<tr>
			<td colspan="2" class="padtop"/>
		</tr>

% if (defined $artist) {
		<tr>
			<td class="label">
				<label>Current Name:</label></td>
			<td class="field">
				<div class="oldtextfield"><% $artist->GetName() %></div></td>
		</tr>
% }
		<tr>
			<td class="label">
				<label for="editartist_name">Artist Name:</label></td>
			<td class="field">
				<input type="text" name="name" class="textfield"
					id="editartist_name" size="50" value="<% $name %>" />
				<& /comp/form/jsbutton, id=>"BTN_ARTIST|name" &></td>
		</tr>
		<tr>
			<td colspan="2" class="padtop"/>
		</tr>
% if (defined $artist) {
		<tr>
			<td class="label">
				<label>Current Sort Name:</label></td>
			<td class="field">
				<div class="oldtextfield"><% $artist->GetSortName()  %></div></td>
		</tr>
% }
		<tr>
			<td class="label">
				<label for="editartist_sortname">Sort Name:</label></td>
			<td class="field">
				<input  type="text" name="sortname" class="textfield"
					id="editartist_sortname" size="50" value="<% $sortname %>" />
				<& /comp/form/jsbutton, id=>"BTN_SORTGUESS|name|sortname" &>
				<& /comp/form/jsbutton, id=>"BTN_SORTCOPY|name|sortname" &></td>
		</tr>

		<tr>
			<td>&nbsp;</td>
			<td class="formsection">
				Dates are in the format <em>YYYY-MM-DD</em>. Partial dates <br/>
				<em>YYYY-MM</em> or just <em>YYYY</em> are OK, or you can omit the date entirely.</td>
		</tr>

		<tr>
			<td class="label">
				<label for="editartist_begindate"><span id="begindate_text"><% $begindate_str %></span>:</label></td>
			<td class="field">
				<& /comp/dateinput,
					name_prefix => "begindate", value => $begindate,
					id => "editartist_begindate" &>
				Year-Month-Day</td>

		</tr>
		<tr>
			<td class="label">
				<label for="editartist_enddate"><span id="enddate_text"><% $enddate_str %></span>:</label></td>
			<td class="field">
				<& /comp/dateinput,
					name_prefix => 'enddate', value => $enddate,
					id => "editartist_enddate" &>
				Year-Month-Day</td>
		</tr>

<%perl>
	if (@dupes and ($resolution eq "" or not $confirm))
	{
		my $many = (@dupes > 1);


		$m->out(qq!<tr>!);
		$m->out(qq!<td>&nbsp;</td> !);
		$m->out(qq!<td class="formsection"> !);
		$m->out(qq!	 <div class="similarartist"> !);
		$m->out(qq!  <span class="warning">Warning:</span> !);
		$m->out(sprintf qq!You are attempting to %s the artist %s, !, (defined $artist ? "edit" : "add"), $name);
		$m->out(qq!	 which appears to be very similar, if not exactly the same as !);
		if ($many)
		{
			$m->out(qq!  these <span id="AddArtistExistingList">existing artists called !);
			for my $i (0..$#dupes)
			{
				$m->out(", ") if ($i != 0 && $i < $#dupes);
				$m->out(" and ") if ($i == $#dupes);
				$m->comp("/comp/artist-link", artist => $dupes[$i]);
			}
		}
		else
		{
			$m->out(qq!  the <span id="AddArtistExistingList">existing artist called !);
			$m->comp("/comp/artist-link", artist => $dupes[0]);
 		}

		$m->out(".</span> ");
		$m->out(sprintf "If you are certain that you want to %s this artist, then:",
						(defined $artist ? "edit" : "add"));

		$m->out(qq!  <ul style="margin-top: 5px"> !);
		$m->out(qq!    <li>You are <strong>required</strong> to enter a comment which allows !);
		$m->out(qq!        to distinguish this artist from !);
 		if ($many)
 		{
			$m->out(qq!    the other artists with the same name!);
 		}
 		else
 		{
			$m->out(qq!    the other artist called !);
			$m->comp("/comp/artist-link", artist => $dupes[0]);
		}
		$m->out(qq!    .</li> !);
		$m->out(qq!    <li>Confirm by activating the checkbox below that you have read, !);
		$m->out(qq!        and understood how we distinguish duplicate artists above and !);
		$m->out(qq!         you know what you are doing.</li> !);
		$m->out(qq!  </ul> !);
		$m->out(qq!  </div></td></tr> !);
	}
</%perl>



[%- WRAPPER "components/box.tt" header="Aliases for ${entity.name}" -%]
  [%- IF aliases.size > 0 -%]
  <table>
    <thead>
      <tr>
        <th>Alias</th>
        <th>Times Used</th>
        <th>Last Used</th>
      </tr>
    </thead>
    <tbody> 
    [%- FOREACH alias IN aliases -%]
      <tr>
        <td>[% alias.name | html %]</td>
        <td>[% alias.useCount | html %]</td>
        <td>[% IF alias.used %][% alias.lastUsed | mb_date %][% ELSE %]never[% END %]</td>
        [% IF c.user_exists %]
        <td>
          [% links = [
                 { link => c.entity_url(entity, 'remove_alias', alias.id), text => "Remove", }
                 { link => c.entity_url(entity, 'edit_alias', alias.id), text => "Edit", }
             ] %]
          [% INCLUDE "components/piped-list.tt" list=links %]
        </td>
        [% END %]
      </tr>
    [%- END -%]
    </tbody>
  </table>
  [%- ELSE -%]
    <p>[% INCLUDE "components/entity-link.tt" %] has no aliases</p>
  [%- END -%]
[%- END -%]

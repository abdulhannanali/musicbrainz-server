[%- name = "${widget.full_name}"
    id = "id_$name"
    type = widget.widget
    value = widget.input || widget.value
    error_class = widget.errors.size ? "error" : ""
    style = widget.style
    extra_attributes = "class=\"${style} ${error_class}\""-%]

[%- IF type -%]
[%- INCLUDE "forms/widgets/${type}.tt" -%]
[%- ELSE; "Warning: unknown widget type?"; END -%]

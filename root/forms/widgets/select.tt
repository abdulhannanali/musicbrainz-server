[%- IF widget.select_widget == 'radio' -%]
    [%- FOREACH option IN widget.options -%]
        <input type="radio" id="[% id %]" name="[% name %]"
               [%- IF widget.value == option.value -%]checked="checked"[%- END -%]
               value="[% option.value %]" />
        [% option.label %]<br/>
    [%- END -%]
[%- ELSE -%]
    <select id="[% id %]"
            name="[% name %]"
            [% extra_attributes %]>
    [%- FOREACH option=widget.options -%]
        <option value="[% option.value %]"
                [%- IF widget.value == option.value -%]selected="selected"[%- END -%]>
            [% option.label %]
        </option>
    [%- END -%]
    </select>
[%- END -%]
